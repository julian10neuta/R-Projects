library(ggplot2)
f <- function(x){(1/2)*exp(-0.5*x)}
integrate(f,0, upper = Inf)$value
f.x <- c(0.41,0.37,0.16,0.05,0.01)
x <- 0:4
df1 <- data.frame(x,f.x)
ggplot(df1, aes(x,f.x)) +
geom_point(col = "magenta2")+
geom_segment(stat = "identity", x=x, y=0, yend =f.x, linetype = "dash")
ggplot(df1, aes(x,f.x)) +
geom_point(col = "magenta2")+
geom_segment(stat = "identity", x=x, y=0, yend =f.x)
sum(df1$f.x)
e.x <- sum(x*f.x)
cat("El valor esperado del ejercicio es;", e.x)
cat("El valor esperado del ejercicio es;", e.x)
e.x2 <- sum((x**2)*f.x)
v.x <- e.x2 -e.x**2
cat("El varianza del ejercicio es;", v.x)
